{
    "manifest_version": 3,
    "name": "Safr",
    "version": "1.0.0",
    "description": "Browse the interent safely with Safr.",
    "background": {
      "service_worker": "/service-worker.js"
    },
    "permissions": [
      "declarativeNetRequest",
      "activeTab",
      "storage"
    ],
    "action": {
      "default_icon": {
        "16": "/assets/lock.png",
        "48": "/assets/lock.png",
        "128": "/assets/logo.png"
      },
      "default_popup": "popup.html"
    },
    "declarative_net_request": {
      "rule_resources": [
        {
          "id": "ruleset_1",
          "enabled": true,
          "path": "rules.json"
        }
      ]
    }
  }
  